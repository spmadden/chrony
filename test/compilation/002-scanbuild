#!/bin/sh

cd ../..

for opts in \
	"--host-system=Linux" \
	"--host-system=NetBSD" \
	"--host-system=FreeBSD" \
	"--without-nettle" \
	"--without-nettle --without-gnutls" \
	"--without-nettle --without-gnutls --without-nss" \
	"--without-nettle --without-gnutls --without-nss --without-tomcrypt"
do
	./configure $opts
	scan-build make "$@" || exit 1
done
