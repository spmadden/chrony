/var/log/chrony/*.log {
	weekly
	rotate 7
	missingok
	notifempty
	compress
	delaycompress
	sharedscripts
	create 644
	postrotate
		PASSWORD=`awk '$1 ~ /^1$/ {print $2; exit}' /etc/chrony/chrony.keys`
		cat << EOF | /usr/bin/chronyc | sed '/^200 OK$/d'
		password $PASSWORD
		cyclelogs
		EOF
	endscript
}
